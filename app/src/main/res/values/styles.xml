<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item> <!-- Размер текста -->
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item> <!-- Шрифт текста -->
        <item name="android:textAllCaps">true</item> <!-- Весь текст заглавными буквами -->
        <item name="android:textColor">@color/btntext</item> <!-- Цвет текста -->
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <!-- Скругление углов кнопки -->
        <item name="cornerRadius">8dp</item>
    </style>
</resources>